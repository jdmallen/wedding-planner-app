{
  "name": "wedding-planner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "css-loader": "^0.28.10",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "prettier": "1.10.2",
    "pretty-quick": "^1.4.0",
    "react-hot-loader": "^4.0.0",
    "webpack": "^3.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": ""
    }
  },
  "scripts": {
    "build": "npm-run-all build-css build-js",
    "build-js": "webpack --config webpack.config.babel.js",
    "build-js-min":
      "webpack --optimize-minimize --config webpack.config.babel.js",
    "build-css": "node-sass-chokidar ClientApp/ -o ClientApp/",
    "precommit": "pretty-quick --staged",
    "start": "npm-run-all -p watch-css",
    "watch-css":
      "node-sass-chokidar ClientApp/ -o ClientApp/ --watch --recursive",
    "watch-js": "webpack --w --config webpack.config.babel.js"
  }
}
