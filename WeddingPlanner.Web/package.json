{
	"name": "wedding-planner",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.2.0",
		"react-dom": "^16.2.0"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.2",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.6.1",
		"babel-preset-react": "^6.24.1",
		"css-loader": "^0.28.10",
		"eslint": "^4.18.2",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-loader": "^2.0.0",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"extract-text-webpack-plugin": "^3.0.2",
		"husky": "^0.14.3",
		"lint-staged": "^7.0.0",
		"node-sass-chokidar": "^1.1.0",
		"npm-run-all": "^4.1.2",
		"prettier": "1.10.2",
		"sass-loader": "^6.0.7",
		"style-loader": "^0.20.3",
		"webpack": "^3.10.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run precommit",
			"pre-push": ""
		}
	},
	"lint-staged": {
		"*.{js,jsx,json,css,md}": [
			"prettier --tab-width 2 --use-tabs --trailing-comma es5 --write",
			"git add"
		]
	},
	"scripts": {
		"build": "npm-run-all build-css build-js",
		"build-js": "webpack --config webpack.config.babel.js",
		"build-js-min": "webpack --optimize-minimize --config webpack.config.babel.js",
		"build-css": "node-sass-chokidar ClientApp/ -o ClientApp/",
		"precommit": "lint-staged",
		"start": "npm-run-all -p watch-css",
		"watch-css": "node-sass-chokidar ClientApp/ -o ClientApp/ --watch --recursive",
		"watch-js": "webpack --w --config webpack.config.babel.js"
	}
}
